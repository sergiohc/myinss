<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Salary</th>
      <th>actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proponents.each do |proponent| %>
      <tr>
        <td><%= proponent.name %></td>
        <td><%= proponent.salary %></td>

        <td>
          <%= button_to proponent_path(proponent), method: :get, class: 'btn btn-info', data: { turbo_frame: "modal" } do %>
            <i class="bi bi-eyeglasses"></i>
            Show
          <% end %>
        </td>

        <td>
          <%= button_to edit_proponent_path(proponent), method: :get, class: 'btn btn-success', data: { turbo_frame: "modal" } do %>
            <i class="bi bi-pencil-square"></i>
            Edit
          <% end %>
        </td>

        <td>
          <%= button_to proponent_path(proponent), method: :delete, class: "btn btn-danger " do %>
            <i class="bi bi-trash"></i>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


