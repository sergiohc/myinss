<div class="mt-4">
  <h1>Proponents</h1>

  <div class="d-flex justify-content-end">
    <%= link_to 'New Proponent', new_proponent_path, class: 'btn btn-success' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Salary</th>
        <th>actions</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @proponents.each do |proponent| %>
        <tr>
          <td><%= proponent.name %></td>
          <td><%= proponent.salary %></td>

          <td><%= link_to 'Show', proponent %></td>
          <td><%= link_to 'Edit', edit_proponent_path(proponent) %></td>
          <td><%= link_to 'Destroy', proponent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @proponents %>
  </div>
</div>

