<section class="h-100"></section>
	<div class="container h-100">
		<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-5">
					<a href="/" class="navbar-brand">
            <%= image_tag("logo.png", class: "d-inline-block align-text-top") %>
          </a>
				</div>

        <div class="card shadow-lg">
					<div class="card-body p-5">
          <h2 class="fs-4 card-title fw-bold mb-4">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field mb-3">
              <%= f.label :email, 'E-mail', class: "mb-2 text-muted" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field mb-3">
              <%= f.label :password, class: "mb-2 text-muted" %>

              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />

              <div class="input-group mb-3", data-controller="password-toggle">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", "data-password-toggle-target": "input" %>
                <span class="input-group-text">
                  <a data-action="click->password-toggle#password" class="bi bi-eye"></a>
                </span>
              </div>
            </div>

            <div class="field input-group mb-3", data-controller="password-toggle">
              <%= f.label :password_confirmation, class: "mb-2 text-muted" %>
              <div class="input-group mb-3">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",  "data-password-toggle-target": "input"  %>
                <span class="input-group-text">
                  <a data-action="click->password-toggle#password" class="bi bi-eye"></a>
                </span>
              </div>
            </div>

            <div class="actions d-flex align-items-center">
              <%= f.submit "Sign up", class: "btn btn-primary ms-auto" %>
            </div>
          <% end %>
        </div>

        <div class="card-footer py-3 border-0">
					<div class="text-center">
						Already have an account? <a class="text-dark" href="/users/sign_in">Login</a>
					</div>
				</div>
      </div>
    </div>
  </div>
</section>
